<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <View
                android:background="#FFA500"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textColor="#FFA500"
                android:textStyle="bold"
                android:text="Food Delivery"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>

            <ImageView
                android:layout_marginLeft="60dp"
                android:src="@drawable/baseline_account_circle_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:drawableLeft="@drawable/baseline_edit_location_24"
                android:text="Home\n2D Federal City,Karukutty..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="Search for dishes or restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginLeft="10dp"
            android:text="Featured Dishes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <HorizontalScrollView android:layout_width="match_parent"
            android:layout_height="150dp"
            >

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/images" />

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/download"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ab"
                    android:layout_width="100dp"
                    android:layout_height="150dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/asd"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/asddf"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ase"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>


            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_margin="20dp" android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:background="#FFA500"
                android:layout_marginLeft="20dp"
                android:text="Pizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="#FFA500"
                android:layout_marginLeft="20dp"
                android:text="Burger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="#FFA500"
                android:layout_marginLeft="20dp"
                android:text="Salad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:layout_margin="10dp"
            android:text="Popular Dishes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/fghfy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/sdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/dsfaf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/hjgcgftgfgv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/dfvgd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_margin="20dp"
            android:src="@drawable/sdffesaf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFA500"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                android:layout_marginLeft="45dp"
                    android:background="@drawable/baseline_fastfood_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginLeft="15dp"
                    android:text="Instamart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="50dp"
                android:background="@drawable/baseline_dinner_dining_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginLeft="25dp"
                    android:text="Food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="40dp"
                android:background="@drawable/baseline_autorenew_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginLeft="15dp"
                    android:text="Reorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</ScrollView>